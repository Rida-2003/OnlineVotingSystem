@model IEnumerable<OnlineVotingSystem.Models.Entities.Election>
@{
    ViewData["Title"] = "Election Results";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">Election Results</h2>

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info">
                    <p>No elections found. Please create an election first.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Election Name</th>
                                <th>Description</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var election in Model)
                            {
                                <tr>
                                    <td><strong>@election.Name</strong></td>
                                    <td>@(election.Description ?? "No description")</td>
                                    <td>@election.StartDate.ToString("MM/dd/yyyy HH:mm")</td>
                                    <td>@election.EndDate.ToString("MM/dd/yyyy HH:mm")</td>
                                    <td>
                                        @if (election.Status == "Active")
                                        {
                                            <span class="badge bg-success">@election.Status</span>
                                        }
                                        else if (election.Status == "Completed")
                                        {
                                            <span class="badge bg-secondary">@election.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">@(election.Status ?? "Pending")</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@election.ElectionId" 
                                           class="btn btn-primary btn-sm">
                                            <i class="bi bi-bar-chart"></i> View Results
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            <div class="mt-3">
                <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

