@model OnlineVotingSystem.Models.Entities.Voter
@{
    ViewData["Title"] = "Profile";
}

<div class="container py-3">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Profile Header -->
            <div class="text-center mb-3">
                <h3 class="fw-bold text-primary mb-1">
                    <i class="bi bi-person-badge me-2"></i>Voter Profile
                </h3>
                <p class="text-muted small">Your account information and voting status</p>
            </div>

            <!-- Main Profile Card -->
            <div class="card border-0 shadow-sm mb-3">
                <!-- Card Header -->
                <div class="card-header bg-info text-white py-2 text-center">
                    <div class="d-flex align-items-center justify-content-center">
                        <div class="bg-white bg-opacity-25 p-2 rounded-circle me-2">
                            <i class="bi bi-person-circle"></i>
                        </div>
                        <div>
                            <h4 class="fw-bold mb-0">@Model.Name</h4>
                            <p class="mb-0 opacity-75 small">Registered Voter</p>
                        </div>
                    </div>
                </div>

                <!-- Card Body -->
                <div class="card-body p-3">
                    <!-- Profile Information Grid -->
                    <div class="row g-2 mb-3">
                        <!-- Name Section -->
                        <div class="col-md-6">
                            <div class="card border h-100">
                                <div class="card-body text-center p-2">
                                    <div class="bg-primary bg-opacity-10 p-2 rounded-circle d-inline-block mb-2">
                                        <i class="bi bi-person-fill text-primary"></i>
                                    </div>
                                    <h6 class="fw-bold mb-1">Full Name</h6>
                                    <div class="border rounded p-2 bg-light">
                                        <p class="mb-0 small fw-medium">@Model.Name</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Email Section -->
                        <div class="col-md-6">
                            <div class="card border h-100">
                                <div class="card-body text-center p-2">
                                    <div class="bg-success bg-opacity-10 p-2 rounded-circle d-inline-block mb-2">
                                        <i class="bi bi-envelope-fill text-success"></i>
                                    </div>
                                    <h6 class="fw-bold mb-1">Email Address</h6>
                                    <div class="border rounded p-2 bg-light">
                                        <p class="mb-0 small fw-medium">@Model.User?.Email</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Voting Status Section -->
                    <div class="card border mb-3">
                        <div class="card-body text-center p-2">
                            <div class="@(Model.HasVoted ? "bg-success bg-opacity-10" : "bg-warning bg-opacity-10") p-2 rounded-circle d-inline-block mb-2">
                                <i class="bi @(Model.HasVoted ? "bi-check-circle-fill text-success" : "bi-clock text-warning")"></i>
                            </div>
                            <h6 class="fw-bold mb-1">Voting Status</h6>
                            <div class="border rounded p-2 bg-light">
                                <div class="d-flex align-items-center justify-content-center">
                                    <span class="badge @(Model.HasVoted ? "bg-success" : "bg-warning") me-2">
                                        @(Model.HasVoted ? "✓ VOTED" : "PENDING")
                                    </span>
                                    <p class="mb-0 small fw-medium">
                                        @(Model.HasVoted
                                                                                ? "Vote cast successfully"
                                                                                : "Not voted yet")
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons Card -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light py-2">
                    <h6 class="card-title mb-0 fw-medium">
                        <i class="bi bi-lightning-charge text-primary me-1"></i>
                        Quick Actions
                    </h6>
                </div>
                <div class="card-body p-3">
                    <div class="row g-2">
                        <div class="col-md-6">
                            <a asp-controller="Voters" asp-action="Dashboard"
                               class="btn btn-primary w-100 py-2">
                                <i class="bi bi-house-door-fill me-1"></i>
                                Dashboard
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-controller="Voters" asp-action="Logout"
                               class="btn btn-danger w-100 py-2">
                                <i class="bi bi-box-arrow-right me-1"></i>
                                Logout
                            </a>
                        </div>
                    </div>

                    <!-- Additional Info -->
                    <div class="mt-2 pt-2 border-top">
                        <div class="alert alert-light border p-2">
                            <div class="d-flex">
                                <i class="bi bi-info-circle-fill text-info me-2"></i>
                                <div>
                                    <p class="mb-0 small">
                                        View elections and voting history from your dashboard.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 6px;
    }

    .bg-opacity-10 {
        background-color: rgba(var(--bs-primary-rgb), 0.1);
    }

    .shadow-sm {
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .border {
        border: 1px solid #dee2e6 !important;
    }

    .btn {
        border-radius: 6px;
        font-size: 0.9rem;
    }

    .badge {
        font-size: 0.7rem;
        padding: 0.25em 0.6em;
    }

    .small {
        font-size: 0.875rem;
    }

    h3 {
        font-size: 1.5rem;
    }

    h4 {
        font-size: 1.25rem;
    }

    h6 {
        font-size: 0.9rem;
    }

    .card-body {
        padding: 0.75rem;
    }

    .card-header {
        padding: 0.5rem 1rem;
    }

    .p-2 {
        padding: 0.5rem !important;
    }

    .p-3 {
        padding: 0.75rem !important;
    }

    .mb-1 {
        margin-bottom: 0.25rem !important;
    }

    .mb-2 {
        margin-bottom: 0.5rem !important;
    }

    .mb-3 {
        margin-bottom: 0.75rem !important;
    }

    .py-2 {
        padding-top: 0.5rem !important;
        padding-bottom: 0.5rem !important;
    }

    .py-3 {
        padding-top: 0.75rem !important;
        padding-bottom: 0.75rem !important;
    }
</style>