@model OnlineVotingSystem.Models.Entities.Voter
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container py-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Welcome Header -->
            <div class="text-center mb-4">
                <h3 class="fw-bold text-primary mb-1">
                    <i class="bi bi-speedometer2 me-2"></i>Welcome, @Model.Name
                </h3>
                <p class="text-muted small">Voter Dashboard</p>
            </div>

            <!-- Stats Cards -->
            <div class="row g-3 mb-4">
                <div class="col-md-4">
                    <div class="card border shadow-sm h-100">
                        <div class="card-body text-center p-3">
                            <div class="bg-primary bg-opacity-10 p-2 rounded-circle d-inline-block mb-2">
                                <i class="bi bi-person-fill text-primary"></i>
                            </div>
                            <h6 class="fw-bold mb-1">Name</h6>
                            <p class="small text-muted mb-0">@Model.Name</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border shadow-sm h-100">
                        <div class="card-body text-center p-3">
                            <div class="bg-success bg-opacity-10 p-2 rounded-circle d-inline-block mb-2">
                                <i class="bi bi-envelope-fill text-success"></i>
                            </div>
                            <h6 class="fw-bold mb-1">Email</h6>
                            <p class="small text-muted mb-0">@Model.User.Email</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border shadow-sm h-100">
                        <div class="card-body text-center p-3">
                            <div class="@(Model.HasVoted ? "bg-success bg-opacity-10" : "bg-warning bg-opacity-10") p-2 rounded-circle d-inline-block mb-2">
                                <i class="bi @(Model.HasVoted ? "bi-check-circle-fill text-success" : "bi-clock text-warning")"></i>
                            </div>
                            <h6 class="fw-bold mb-1">Status</h6>
                            <p class="small @(Model.HasVoted ? "text-success" : "text-warning") fw-medium mb-0">
                                @(Model.HasVoted ? "Voted" : "Not Voted")
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Card -->
            <div class="card border shadow-sm mb-3">
                <div class="card-header bg-light py-2">
                    <h6 class="mb-0 fw-medium">
                        <i class="bi bi-lightning me-1"></i>Quick Actions
                    </h6>
                </div>
                <div class="card-body p-3">
                    <div class="text-center">
                        @if (!Model.HasVoted)
                        {
                            <a asp-controller="Voters" asp-action="SelectElection" class="btn btn-success btn-sm px-4 py-2">
                                <i class="bi bi-ballot me-1"></i>Cast Vote
                            </a>
                        }
                        <a asp-controller="Voters" asp-action="Profile" class="btn btn-outline-primary btn-sm px-4 py-2 ms-2">
                            <i class="bi bi-person me-1"></i>Profile
                        </a>
                    </div>
                </div>
            </div>

            <!-- Info Card -->
            <div class="card border shadow-sm">
                <div class="card-body p-3">
                    <div class="d-flex">
                        <i class="bi bi-info-circle text-primary me-2"></i>
                        <div>
                            <p class="small text-muted mb-0">
                                Check upcoming elections and cast your vote securely.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>