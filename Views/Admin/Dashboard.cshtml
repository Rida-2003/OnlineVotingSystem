@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-3">
    <!-- Header -->
    <div class="mb-3">
        <h3 class="fw-bold text-primary mb-1">
            <i class="bi bi-speedometer2 me-2"></i>Admin Dashboard
        </h3>
        <p class="text-muted small">System overview and management</p>
    </div>

    <!-- Stats Cards -->
    <div class="row g-2 mb-4">
        <div class="col-md-4">
            <div class="card border shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 p-2 rounded-circle me-3">
                            <i class="bi bi-trophy text-primary"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-0">Elections</h6>
                            <h4 class="fw-bold text-primary mb-1">@ViewBag.ElectionCount</h4>
                            <a asp-action="Elections" class="btn btn-primary btn-sm py-1 px-2">
                                <i class="bi bi-gear me-1"></i>Manage
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="bg-success bg-opacity-10 p-2 rounded-circle me-3">
                            <i class="bi bi-people text-success"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-0">Voters</h6>
                            <h4 class="fw-bold text-success mb-1">@ViewBag.VoterCount</h4>
                            <a asp-action="Voters" class="btn btn-success btn-sm py-1 px-2">
                                <i class="bi bi-eye me-1"></i>View
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="bg-info bg-opacity-10 p-2 rounded-circle me-3">
                            <i class="bi bi-flag text-info"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-0">Parties</h6>
                            <h4 class="fw-bold text-info mb-1">@ViewBag.PartyCount</h4>
                            <a asp-action="Parties" class="btn btn-info btn-sm py-1 px-2">
                                <i class="bi bi-gear me-1"></i>Manage
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="card border shadow-sm">
        <div class="card-header bg-light py-2">
            <h6 class="mb-0 fw-medium">
                <i class="bi bi-link me-1"></i>Quick Access
            </h6>
        </div>
        <div class="card-body p-3">
            <div class="row g-2">
                <div class="col-md-3 col-6">
                    <a asp-action="Elections" class="btn btn-outline-primary w-100 py-2">
                        <i class="bi bi-trophy me-1"></i>Elections
                    </a>
                </div>
                <div class="col-md-3 col-6">
                    <a asp-action="Voters" class="btn btn-outline-success w-100 py-2">
                        <i class="bi bi-people me-1"></i>Voters
                    </a>
                </div>
                <div class="col-md-3 col-6">
                    <a asp-action="Parties" class="btn btn-outline-info w-100 py-2">
                        <i class="bi bi-flag me-1"></i>Parties
                    </a>
                </div>
                <div class="col-md-3 col-6">
                    <a asp-action="AddElection" class="btn btn-outline-warning w-100 py-2">
                        <i class="bi bi-plus-circle me-1"></i>Add Election
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- System Status -->
    <div class="card border shadow-sm mt-3">
        <div class="card-header bg-light py-2">
            <h6 class="mb-0 fw-medium">
                <i class="bi bi-info-circle me-1"></i>System Status
            </h6>
        </div>
        <div class="card-body p-3">
            <div class="row g-2">
                <div class="col-md-6">
                    <div class="d-flex align-items-center p-2 border rounded">
                        <i class="bi bi-check-circle-fill text-success fs-5 me-2"></i>
                        <div>
                            <h6 class="fw-bold mb-0 small">System</h6>
                            <p class="mb-0 text-success small">Operational</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-center p-2 border rounded">
                        <i class="bi bi-shield-check text-primary fs-5 me-2"></i>
                        <div>
                            <h6 class="fw-bold mb-0 small">Security</h6>
                            <p class="mb-0 text-primary small">Active</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 6px;
    }

    .bg-opacity-10 {
        background-color: rgba(var(--bs-primary-rgb), 0.1);
    }

    .shadow-sm {
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .border {
        border: 1px solid #dee2e6 !important;
    }

    .btn {
        border-radius: 6px;
        font-size: 0.9rem;
    }

    .small {
        font-size: 0.875rem;
    }

    h3 {
        font-size: 1.5rem;
    }

    h4 {
        font-size: 1.25rem;
    }

    h6 {
        font-size: 0.9rem;
    }

    .card-body {
        padding: 0.75rem;
    }

    .card-header {
        padding: 0.5rem 1rem;
    }

    .p-3 {
        padding: 0.75rem !important;
    }

    .mb-1 {
        margin-bottom: 0.25rem !important;
    }

    .mb-3 {
        margin-bottom: 0.75rem !important;
    }

    .py-2 {
        padding-top: 0.5rem !important;
        padding-bottom: 0.5rem !important;
    }
</style>