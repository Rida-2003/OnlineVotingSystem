@{
    ViewData["Title"] = "Candidates";
}

<div class="container py-3">
    <!-- Header -->
    <div class="mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h3 class="fw-bold text-primary mb-1">
                    <i class="bi bi-people-fill me-2"></i>Candidates
                </h3>
                <p class="text-muted small">Election: @ViewBag.ElectionName</p>
            </div>
            <div>
                <a asp-action="RegisterCandidate" asp-route-electionId="@ViewBag.ElectionId" class="btn btn-success btn-sm">
                    <i class="bi bi-person-plus me-1"></i>Add Candidate
                </a>
            </div>
        </div>
    </div>

    <!-- Candidates Table -->
    <div class="card border shadow-sm mb-3">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="small fw-medium">Name</th>
                            <th class="small fw-medium">Party</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model)
                        {
                            <tr>
                                <td class="small">@c.Name</td>
                                <td>
                                    <span class="badge bg-info small">@(c.Party?.Name ?? "N/A")</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Back Button -->
    <a asp-action="Parties" asp-route-electionId="@ViewBag.ElectionId" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left me-1"></i>Back to Parties
    </a>
</div>