@model IEnumerable<OnlineVotingSystem.Models.Entities.Voter>

<div class="container py-3">
    <!-- Header -->
    <div class="mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h3 class="fw-bold text-primary mb-1">
                    <i class="bi bi-people me-2"></i>Registered Voters
                </h3>
                <p class="text-muted small">View all registered voters in the system</p>
            </div>
            <a asp-action="Dashboard" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left me-1"></i>Back
            </a>
        </div>
    </div>

    <!-- Voters Table -->
    <div class="card border shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="small fw-medium">Name</th>
                            <th class="small fw-medium">Email</th>
                            <th class="small fw-medium">Voting Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var voter in Model)
                        {
                            <tr>
                                <td class="small">@voter.Name</td>
                                <td class="small">@voter.User?.Email</td>
                                <td>
                                    <span class="badge @(voter.HasVoted ? "bg-success" : "bg-warning") small">
                                        <i class="bi @(voter.HasVoted ? "bi-check-circle" : "bi-clock") me-1"></i>
                                        @(voter.HasVoted ? "Voted" : "Not Voted")
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>