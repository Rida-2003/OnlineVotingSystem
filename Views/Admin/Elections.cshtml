@model IEnumerable<OnlineVotingSystem.Models.Entities.Election>

<div class="container py-3">
    <!-- Header -->
    <div class="mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h3 class="fw-bold text-primary mb-1">
                    <i class="bi bi-trophy me-2"></i>Manage Elections
                </h3>
                <p class="text-muted small">Create and manage voting elections</p>
            </div>
            <a asp-action="Dashboard" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Add Election Button -->
    <div class="mb-3">
        <a asp-action="AddElection" class="btn btn-success btn-sm">
            <i class="bi bi-plus-circle me-1"></i>Add Election
        </a>
    </div>

    <!-- Elections Table -->
    <div class="card border shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="small fw-medium">Title</th>
                            <th class="small fw-medium">Start Date</th>
                            <th class="small fw-medium">End Date</th>
                            <th class="small fw-medium">Status</th>
                            <th class="small fw-medium">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var election in Model)
                        {
                            var status = election.EndDate < DateTime.Now ? "Completed" : (election.StartDate > DateTime.Now ? "Upcoming" : "Active");
                            var badgeClass = status == "Active" ? "bg-success" : (status == "Upcoming" ? "bg-warning" : "bg-secondary");
                            <tr>
                                <td class="small">@election.Name</td>
                                <td class="small">@election.StartDate.ToString("MM/dd/yyyy")</td>
                                <td class="small">@election.EndDate.ToString("MM/dd/yyyy")</td>
                                <td>
                                    <span class="badge @badgeClass small">
                                        <i class="bi @(status == "Active" ? "bi-play-circle" : status == "Upcoming" ? "bi-clock" : "bi-check-circle") me-1"></i>
                                        @status
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="EditElection" asp-route-id="@election.ElectionId"
                                           class="btn btn-outline-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="DeleteElection" asp-route-id="@election.ElectionId"
                                           class="btn btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                        <a asp-action="AddParty" asp-route-electionId="@election.ElectionId"
                                           class="btn btn-outline-info" title="Manage Parties">
                                            <i class="bi bi-flag"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Summary -->
    @if (Model != null && Model.Any())
    {
        <div class="mt-3">
            <div class="alert alert-light border py-2 small">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <i class="bi bi-info-circle me-2"></i>
                        Showing @Model.Count() election@(Model.Count() > 1 ? "s" : "")
                    </div>
                    <div>
                        @{
                            var active = Model.Count(e => e.StartDate <= DateTime.Now && e.EndDate >= DateTime.Now);
                            var upcoming = Model.Count(e => e.StartDate > DateTime.Now);
                            var completed = Model.Count(e => e.EndDate < DateTime.Now);
                        }
                        <span class="badge bg-success me-1">@active Active</span>
                        <span class="badge bg-warning me-1">@upcoming Upcoming</span>
                        <span class="badge bg-secondary">@completed Completed</span>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- No Elections -->
        <div class="card border text-center py-4 mt-3">
            <div class="card-body">
                <i class="bi bi-trophy text-muted fs-2 mb-3"></i>
                <h6 class="fw-bold text-muted mb-2">No Elections Found</h6>
                <p class="small text-muted mb-3">Start by creating your first election</p>
                <a asp-action="AddElection" class="btn btn-success btn-sm">
                    <i class="bi bi-plus-circle me-1"></i>Create First Election
                </a>
            </div>
        </div>
    }
</div>

<style>
    .card {
        border-radius: 6px;
    }

    .shadow-sm {
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .border {
        border: 1px solid #dee2e6 !important;
    }

    .btn-group-sm > .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
    }

    .badge {
        font-size: 0.7rem;
        padding: 0.25em 0.6em;
    }

    .small {
        font-size: 0.875rem;
    }

    h3 {
        font-size: 1.5rem;
    }

    .table-light th {
        background-color: #f8f9fa;
        font-weight: 500;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }
</style>