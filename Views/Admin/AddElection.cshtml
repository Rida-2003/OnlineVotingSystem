@model OnlineVotingSystem.Models.Entities.Election
@{
    ViewData["Title"] = "Add Election";
}

<div class="container py-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border shadow-sm">
                <!-- Header -->
                <div class="card-header bg-primary text-white py-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-plus-circle me-2"></i>Add Election
                        </h5>
                        <a asp-action="Elections" class="btn btn-light btn-sm py-0">
                            <i class="bi bi-x-lg"></i>
                        </a>
                    </div>
                </div>

                <!-- Form -->
                <div class="card-body p-3">
                    <form asp-action="AddElection" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-medium small">Election Name</label>
                            <input asp-for="Name" class="form-control form-control-sm"
                                   placeholder="Enter election name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="row g-2 mb-3">
                            <div class="col-md-6">
                                <label asp-for="StartDate" class="form-label fw-medium small">Start Date</label>
                                <input asp-for="StartDate" type="date" class="form-control form-control-sm" />
                                <span asp-validation-for="StartDate" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="EndDate" class="form-label fw-medium small">End Date</label>
                                <input asp-for="EndDate" type="date" class="form-control form-control-sm" />
                                <span asp-validation-for="EndDate" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-sm py-2">
                                <i class="bi bi-check-circle me-1"></i>Add Election
                            </button>
                            <a asp-action="Elections" class="btn btn-outline-secondary btn-sm py-2">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>