@model IEnumerable<OnlineVotingSystem.Models.Entities.Party>
@{
    ViewData["Title"] = "All Parties";
    var electionId = ViewBag.ElectionId as int?;
}

<div class="container py-3">
    <!-- Header -->
    <div class="mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h3 class="fw-bold text-primary mb-1">
                    <i class="bi bi-flag me-2"></i>All Parties
                </h3>
                <p class="text-muted small">View and manage political parties across elections</p>
            </div>
            <div>
                <!-- Add Party Button -->
                <a asp-action="AddParty" class="btn btn-primary btn-sm me-2">
                    <i class="bi bi-plus-lg me-1"></i>Add Party
                </a>
                <a asp-action="Dashboard" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-speedometer2 me-1"></i>Dashboard
                </a>
            </div>
        </div>
    </div>

    <!-- Parties Table -->
    <div class="card border shadow-sm mb-3">
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="small fw-medium">ID</th>
                                <th class="small fw-medium">Party Name</th>
                                <th class="small fw-medium">Election</th>
                                <th class="small fw-medium">Status</th>
                                <th class="small fw-medium">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var party in Model)
                            {
                                <tr>
                                    <td class="small">@party.PartyId</td>
                                    <td class="small fw-medium">
                                        <i class="bi bi-flag text-primary me-1"></i>@party.Name
                                    </td>
                                    <td class="small">
                                        @if (party.Election != null)
                                        {
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-trophy text-warning me-2"></i>
                                                <div>
                                                    <div class="fw-medium">@party.Election.Name</div>
                                                    <small class="text-muted">
                                                        @party.Election.StartDate.ToString("MMM dd, yyyy") -
                                                        @party.Election.EndDate.ToString("MMM dd, yyyy")
                                                    </small>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No election assigned</span>
                                        }
                                    </td>
                                    <td>
                                        @if (party.Election != null)
                                        {
                                            var election = party.Election;
                                            var status = election.EndDate < DateTime.Now ? "Completed" :
                                            (election.StartDate > DateTime.Now ? "Upcoming" : "Active");
                                            var badgeClass = status == "Active" ? "bg-success" :
                                            (status == "Upcoming" ? "bg-warning" : "bg-secondary");

                                            <span class="badge @badgeClass small">
                                                @status
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary small">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="DeleteParty"
                                               asp-route-id="@party.PartyId"
                                               class="btn btn-outline-danger"
                                               title="Delete"
                                               onclick="return confirm('Are you sure you want to delete this party?');">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <!-- No Parties -->
                <div class="text-center py-5">
                    <i class="bi bi-flag text-muted fs-1 mb-3"></i>
                    <h6 class="fw-bold text-muted mb-2">No Parties Found</h6>
                    <p class="small text-muted mb-3">Add your first political party to get started</p>
                    <a asp-action="AddParty" class="btn btn-success btn-sm">
                        <i class="bi bi-plus-circle me-1"></i>Add First Party
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Summary Stats -->
    @if (Model != null && Model.Any())
    {
        <div class="card border shadow-sm">
            <div class="card-body p-3">
                <div class="row g-3">
                    <div class="col-md-3">
                        <div class="text-center">
                            <h4 class="fw-bold text-primary">@Model.Count()</h4>
                            <p class="small text-muted mb-0">Total Parties</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center">
                            <h4 class="fw-bold text-success">
                                @Model.Count(p => p.Election?.StartDate <= DateTime.Now && p.Election?.EndDate >= DateTime.Now)
                            </h4>
                            <p class="small text-muted mb-0">Active Elections</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center">
                            <h4 class="fw-bold text-warning">
                                @Model.Select(p => p.ElectionId).Distinct().Count()
                            </h4>
                            <p class="small text-muted mb-0">Unique Elections</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="text-center">
                            <h4 class="fw-bold text-info">
                                @Model.Count(p => p.Election == null)
                            </h4>
                            <p class="small text-muted mb-0">No Election</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Action Buttons -->
    <div class="d-flex gap-2 mt-3">
        <a asp-action="AddParty" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-lg me-1"></i>Add Party
        </a>
        <a asp-action="Dashboard" class="btn btn-outline-primary btn-sm">
            <i class="bi bi-speedometer2 me-1"></i>Admin Dashboard
        </a>
        <a asp-action="Elections" class="btn btn-outline-info btn-sm">
            <i class="bi bi-trophy me-1"></i>View Elections
        </a>
    </div>
</div>

<style>
    .card {
        border-radius: 6px;
    }

    .shadow-sm {
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .border {
        border: 1px solid #dee2e6 !important;
    }

    .badge {
        font-size: 0.7rem;
        padding: 0.25em 0.6em;
    }

    .small {
        font-size: 0.875rem;
    }

    h3 {
        font-size: 1.5rem;
    }

    h4 {
        font-size: 1.25rem;
    }

    .table-light th {
        background-color: #f8f9fa;
        font-weight: 500;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .btn-group-sm > .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
    }
</style>